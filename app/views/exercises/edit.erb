<% if flash.has?(:message) %>
  <%= flash[:message] %>
<% end %>


<h1>Edit</h1>
<form action="/exercises/<%= @exercise.id %>/edit" method="post">
  <label>Name:</label>
  <input type="text" name="exercise[name]" value="<%= @exercise.name %>">
  <br></br>

  <label>Description:</label>
  <input type="text" name="exercise[description]" value="<%= @exercise.description %>">
  <br></br>

  <% if @exercise.category == 'cardio' %>
    <label>Intensity:</label>
    <input type="radio" name="exercise[intensity]" value="low" <%= 'checked' if @exercise.intensity == 'low' %>>Low</input>
    <input type="radio" name="exercise[intensity]" value="medium" <%= 'checked' if @exercise.intensity == 'medium' %>>Medium</input>
    <input type="radio" name="exercise[intensity]" value="high" <%= 'checked' if @exercise.intensity == 'high' %>>High</input>
    <br></br>

    <label>Minutes:</label>
    <input type="number" name="exercise[minutes]" value="<%= @exercise.minutes %>">
    <br></br>

  <% elsif @exercise.category == 'resistance' %>
    <label>Sets:</label>
    <input type="number" name="exercise[sets]" value="<%= @exercise.sets %>">
    <br></br>

    <label>Reps:</label>
    <input type="number" name="exercise[reps]" value="<%= @exercise.reps %>">
    <br></br>

    <label>Weight:</label>
    <input type="number" name="exercise[weight]" value="<%= @exercise.weight %>">
    <br></br>
  <% end %>

  <input type="submit" value="Save">
</form>
