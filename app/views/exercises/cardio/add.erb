<% if flash.has?(:message) %>
  <%= flash[:message] %>
<% end %>

<h1>Add Cardio</h1>
<form action="/exercises/cardio/add" method="post">
  <% if current_user.exercises.where(category: 'cardio').exists? %>
    <h3><label>Choose Exercise:</label></h3>
    <% current_user.exercises.where(category: 'cardio').each do |exercise| %>
        <input type="radio" name="name" value="<%= exercise.name %>"><%= exercise.name %></input>
    <% end %>
    <br></br>

    <label>Intensity:</label>
    <input type="radio" name="cardio[intensity]" value="low">Low</input>
    <input type="radio" name="cardio[intensity]" value="medium">Medium</input>
    <input type="radio" name="cardio[intensity]" value="high">High</input>
    <br></br>

    <label>Minutes Performed:</label>
    <input type="number" min="1" name="cardio[minutes]">
    <br></br>

    <input type="submit" value="Add To Workout">
  <% end %>
</form>

<h3>Or, Create New Exercise</h3>
<form action="/exercises/cardio/new" method="post">
  <input type="hidden" name="new_cardio[category]" value="cardio">
  <label>Name:</label>
  <input type="text" name="new_cardio[name]">
  <br></br>

  <label>Description (optional):</label>
  <input type="text" name="new_cardio[description]">
  <br></br>

  <label>Intensity:</label>
  <input type="radio" name="new_cardio[intensity]" value="low">Low</input>
  <input type="radio" name="new_cardio[intensity]" value="medium">Medium</input>
  <input type="radio" name="new_cardio[intensity]" value="high">High</input>
  <br></br>

  <label>Minutes Performed:</label>
  <input type="number" min="1" name="new_cardio[minutes]">
  <br></br>

  <input type="submit" value="Add To Workout">


</form>
